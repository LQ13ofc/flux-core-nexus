{
  "name": "flux-core-nexus",
  "version": "5.0.0",
  "main": "dist/electron/electron/main.js",
  "author": "Nexus Dev Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n \"VITE,ELECTRON\" -c \"bgBlue,bgMagenta\" \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run clean && npm run type-check && npm run build:renderer && npm run build:electron && npm run package",
    "build:auto": "npm run build",
    "clean": "rimraf dist release",
    "type-check": "tsc --noEmit && tsc -p tsconfig.electron.json --noEmit",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "electron-builder",
    "postinstall": "electron-builder install-app-deps && npm run rebuild:koffi",
    "rebuild:koffi": "electron-rebuild -f -w koffi",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "electron-updater": "^6.1.8",
    "koffi": "^2.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "lucide-react": "^0.460.0",
    "react-window": "^1.8.10",
    "react-virtualized-auto-sizer": "^1.0.24"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-window": "^1.8.8",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5"
  }
}