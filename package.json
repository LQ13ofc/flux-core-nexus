{
  "name": "flux-core-master",
  "version": "4.0.0",
  "description": "Flux Core Nexus: Advanced Execution Environment",
  "main": "electron-main.js",
  "author": "Nexus Dev Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist release node_modules",
    "reinstall": "npm run clean && npm install",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:mac": "electron-builder --mac --arm64",
    "build:auto": "node -e \"const os=require('os'); const p=os.platform(); const cmd = p==='win32' ? 'npm run build:win' : p==='darwin' ? 'npm run build:mac' : 'npm run build:linux'; console.log('\\x1b[36m%s\\x1b[0m', 'Flux Core Build System: Detected ' + p.toUpperCase()); require('child_process').execSync(cmd, {stdio:'inherit'});\""
  },
  "build": {
    "appId": "com.fluxcore.nexus",
    "productName": "Flux Core Nexus",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "mac": {
      "target": "dmg"
    },
    "extraResources": [
      {
        "from": "native/",
        "to": "native",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "koffi": "^2.9.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.0.1"
  }
}