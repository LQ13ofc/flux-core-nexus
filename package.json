
{
  "name": "flux-core-master",
  "version": "3.1.0",
  "description": "Flux Core Nexus: Advanced Execution Environment",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:mac": "electron-builder --mac --arm64",
    "build:all": "npm run build:win32 && npm run build:win64 && npm run build:linux && npm run build:mac"
  },
  "build": {
    "appId": "com.fluxcore.master",
    "productName": "Flux Core Master",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    },
    "extraResources": [
      {
        "from": "native/",
        "to": "native",
        "filter": ["**/*"]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "nexus-dev",
        "repo": "flux-core-updates"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.1.4",
    "ffi-napi": "^4.0.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
